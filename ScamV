    <script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>

    <script>
        const questionScreen = document.getElementById('question-screen');
        const successScreen = document.getElementById('success-screen');
        const yesBtn = document.getElementById('yes-btn');
        const noBtn = document.getElementById('no-btn');

        // --- THE RUNNING BUTTON LOGIC ---
        function moveNoButton() {
            // 1. Get the width and height of the browser window
            const maxWidth = window.innerWidth - noBtn.offsetWidth;
            const maxHeight = window.innerHeight - noBtn.offsetHeight;

            // 2. Generate a random Number for X and Y coordinates
            const randomX = Math.floor(Math.random() * maxWidth);
            const randomY = Math.floor(Math.random() * maxHeight);

            // 3. Apply the new position
            // 'fixed' position allows it to break out of the container and go anywhere
            noBtn.style.position = 'fixed'; 
            noBtn.style.left = randomX + 'px';
            noBtn.style.top = randomY + 'px';
        }

        // Trigger move on Mouse Over (Desktop)
        noBtn.addEventListener('mouseover', moveNoButton);
        
        // Trigger move on Click (Just in case they are super fast on mobile)
        noBtn.addEventListener('click', (e) => {
            e.preventDefault(); // Stop it from actually clicking
            moveNoButton();
        });
        // --------------------------------

        // Yes button click functionality
        yesBtn.addEventListener('click', () => {
            questionScreen.style.display = 'none';
            successScreen.classList.remove('hidden');
            triggerConfetti();
        });

        // Confetti Effect
        function triggerConfetti() {
            const duration = 15 * 1000;
            const animationEnd = Date.now() + duration;
            const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };

            function randomInRange(min, max) { return Math.random() * (max - min) + min; }

            const interval = setInterval(function() {
                const timeLeft = animationEnd - Date.now();
                if (timeLeft <= 0) return clearInterval(interval);

                const particleCount = 50 * (timeLeft / duration);
                confetti(Object.assign({}, defaults, { particleCount, origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 } }));
                confetti(Object.assign({}, defaults, { particleCount, origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 } }));
            }, 250);
        }
    </script>
